<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yoopoon.market"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.yoopoon.market.MyApplication_"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yoopoon.market.MainActivity_"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeNoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yoopoon.market.PersonalInfoActivity_"
            android:screenOrientation="portrait" 
            android:theme="@style/Theme_Activity_Animation"/>
        <activity
            android:name="com.yoopoon.market.AddressManageActivity_"
            android:screenOrientation="portrait" 
            android:theme="@style/Theme_Activity_Animation"/>
        <activity
            android:name="com.yoopoon.market.AboutUActivity_"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Activity_Animation" />
        <activity
            android:name="com.yoopoon.market.BalanceActivity_"
            android:screenOrientation="portrait" 
            android:theme="@style/Theme_Activity_Animation"/>
        <activity
            android:name="com.yoopoon.market.CleanServeActivity_"
            android:screenOrientation="portrait" 
            android:theme="@style/Theme_Activity_Animation"/>
        <activity android:name="com.yoopoon.market.AssuranceActivity_"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Activity_Animation" />
        
        <activity
            android:name="com.yoopoon.market.AssuranceDetailActivity_"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Activity_Animation"  />
        <!-- 产品分类Activity -->
        <activity
            android:name="com.yoopoon.market.ProductClassifyActivity_"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 产品详细信息Activity -->
        <activity
            android:name="com.yoopoon.market.ProductDetailActivity_"
            android:screenOrientation="portrait" >
        </activity>
        <!-- 产品列表Activity -->
        <activity
            android:name="com.yoopoon.market.ProductList_"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
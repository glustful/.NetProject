<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="ThemeNoTitle" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    

    <style name="Button_Me">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/right_next_icon</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/white_bg</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TextView_Me_Order">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawableTop">@drawable/ic_launcher</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/white_bg</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextView_Bottom_Navigation">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="TextView_TextColor_Black">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TextView_TextColor_Red">
        <item name="android:textColor">@color/red</item>
    </style>
    
    <style name="TextView_RedColor_SmallSize" parent="TextView_TextColor_Red">
        <item name="android:textSize">@dimen/small_textsize</item>
    </style>
    
    <style name="TextView_ScrollAble">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

</resources>
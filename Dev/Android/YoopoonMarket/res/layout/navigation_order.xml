<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_search_height"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/tv1"
        style="@style/TextView_Order_Navigation"
        android:text="待付款"
        android:tag="0"
        android:background="@drawable/red_line_bg"/>
    
    <TextView 
        android:id="@+id/tv2"
        style="@style/TextView_Order_Navigation"
        android:text="待发货"
        android:tag="1"
        android:background="@drawable/white_tv_bg"/>
    
    
    <TextView 
        android:id="@+id/tv3"
        style="@style/TextView_Order_Navigation"
        android:text="待收货"
        android:tag="2"
        android:background="@drawable/white_tv_bg"/>
    
    <TextView 
        android:id="@+id/tv4"
        style="@style/TextView_Order_Navigation"
        android:text="待评价"
        android:tag="3"
        android:background="@drawable/white_tv_bg"/>
    

</LinearLayout>

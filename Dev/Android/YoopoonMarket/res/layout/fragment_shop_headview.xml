<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout_fragment_shop_service"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FED600"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.5" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yoopoon_service" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_house_keeping"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/round_white_background"
                android:padding="6dp"
                android:src="@drawable/political" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="家政服务"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_washing_clothes"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/round_white_background"
                android:padding="6dp"
                android:src="@drawable/wash_machine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="衣物清洗"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_take_in_express"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/round_white_background"
                android:padding="6dp"
                android:src="@drawable/delivery" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="快递代收"
                android:textSize="12sp" />
        </LinearLayout>


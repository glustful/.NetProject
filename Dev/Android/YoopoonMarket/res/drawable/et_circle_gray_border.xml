<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <solid android:color="@color/white" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

            <stroke android:width="1px" android:color="@color/background_gray" />
        </shape></item>
        
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/background_gray" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

            <stroke android:width="1px" android:color="@color/background_gray" />
        </shape></item>

</selector>
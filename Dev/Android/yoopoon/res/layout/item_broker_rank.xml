<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    
    
    <ImageView 
        android:id="@+id/iv_rank_medal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gold"/>
    
    <TextView 
        android:id="@+id/tv_rank_desc"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_rank_medal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金牌经纪人"/>
    
    <TextView 
        android:id="@+id/tv_rank_money"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_rank_desc"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_rank_medal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="佣金 200"/>
    
    <View 
       	android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_broker_rank_trend"
        android:layout_width="0.0001px"
        android:layout_height="30dp"
        android:background="@color/setting_text"/>
    
    
    <ImageView 
        android:layout_centerVertical="true"
        android:id="@+id/iv_broker_rank_trend"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/up_arrow"/>
    
    

</RelativeLayout>

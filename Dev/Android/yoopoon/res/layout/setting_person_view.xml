<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:makeramen="http://schemas.android.com/apk/res/com.yoopoon.home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" 
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.makeramen.RoundedImageView
                android:id="@+id/iv_person_setting_avater"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/default_head_img"
                makeramen:corner_radius="100000dp" />

            <TextView
                android:id="@+id/tv_person_setting_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="昵称"
                android:textColor="@color/setting_text"
                android:textSize="@dimen/large_textSize" />

            <com.yoopoon.home.ui.view.RedStarTextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                
                android:text="*姓名"
                android:textColor="@color/setting_text"
                android:textSize="@dimen/large_textSize"
                android:id="@+id/rstv_person_setting_name" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/name"
                style="@style/EditText_Normal"
                android:hint="姓名" />

            <com.yoopoon.home.ui.view.RedStarTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*性别"
                android:textColor="@color/setting_text"
                android:textSize="@dimen/large_textSize" />

            <RadioGroup
                android:id="@+id/rg_person_setting_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_person_setting_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textSize="14sp"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/rb_person_setting_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:text="女" />
            </RadioGroup>


            <TextView
                android:id="@+id/tv_person_setting_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="电话：18760951789"
                android:textColor="@color/setting_text" />

            <com.yoopoon.home.ui.view.RedStarTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*身份证"
                android:textColor="@color/setting_text"
                android:textSize="@dimen/large_textSize" />

            <EditText
                android:id="@+id/card"
                android:layout_marginTop="5dp"
                style="@style/EditText_Normal"
                android:hint="保护账号安全"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="邮箱"
                android:textColor="@color/setting_text"
                android:textSize="@dimen/large_textSize" />

            <EditText
                android:id="@+id/email"
                android:layout_marginTop="5dp"
                style="@style/EditText_Normal"
                android:hint="用户邮箱"/>

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cycle_selector"
                android:text="保存"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
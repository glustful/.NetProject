<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/setting_text"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#55000000"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/tv_style_name"
                    style="@style/TextView_WrapContent"
                    android:layout_alignParentLeft="true"
                    android:text="中天理想"
                    android:textColor="@color/little_whitle" />

                <TextView
                    android:id="@+id/tv_style_subtitle"
                    style="@style/TextView_WrapContent"
                    android:layout_below="@id/tv_style_name"
                    android:layout_marginTop="5dp"
                    android:text="哈哈哈"
                    android:textColor="@color/little_whitle" />

                <View
                    android:layout_width="0.001dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_style_details"
                    android:background="@drawable/vertical_line" />

                <TextView
                    android:id="@+id/tv_style_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="楼盘详情"
                    android:textColor="@color/little_whitle" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp" >

            <Button
                android:id="@+id/tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cycle_selector"
                android:text="户型"
                android:textColor="@color/little_whitle" />

            <Button
                android:id="@+id/tv_style_consult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/cycle_selector"
                android:drawableLeft="@drawable/phone_icon2"
                android:drawablePadding="5dp"
                android:text="咨询电话"
                android:textColor="@color/little_whitle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line" />

        <WebView
            android:id="@+id/wv_style_detail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="啊哈哈哈哈哈哈哈 " />
    </LinearLayout>

</ScrollView>